			  "label": "TRANSLATE.COMMON.SAVE",
			  "data": [
				  "tracknumbers",
				  "compilation",
				  "artistsort",
				  "ffmpegenable"
			  ]
		  },
		  "content": [
			  {
				  "id": "tracknumbers",
				  "element": "switch",
				  "doc" : "TRANSLATE.APPEARANCE.SHOW_TRACKNUMBERS_DOC",
