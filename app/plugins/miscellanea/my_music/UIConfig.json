	  "saveButton": {
		"label": "TRANSLATE.COMMON.SAVE",
		"data": [
		  "enable_web",
		  "web_quality",
		  "metadataimage"
		]
	  },
	  "content": [
		{
		  "id": "enable_web",
		  "element": "switch",
		  "doc" : "TRANSLATE.APPEARANCE.WEB_ALBUMART_ENABLE_DOC",
		  "label": "TRANSLATE.APPEARANCE.WEB_ALBUMART_ENABLE",
		  "value": true
