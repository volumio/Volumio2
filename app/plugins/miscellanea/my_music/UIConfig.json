				  "label": "TRANSLATE.COMMON.ARTISTS",
				  "value": true
			  },
			  {
				  "id": "albums://",
				  "element": "switch",
				  "label": "TRANSLATE.COMMON.ALBUMS",
				  "value": true
			  },
			  {
				  "id": "genres://",
				  "element": "switch",
				  "label": "TRANSLATE.COMMON.GENRES",
				  "value": true
			  },
			  {
				  "id": "radio",
				  "element": "switch",
				  "label": "TRANSLATE.WEBRADIO.WEBRADIO",
				  "value": true
